<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.AllocationController"
      spacing="15" alignment="TOP_CENTER">

    <!-- Title -->
    <Label text="ðŸ  Room Allocation"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Allocation Form Section -->
    <HBox spacing="20" alignment="CENTER">
        <VBox spacing="8">
            <Label text="Select Student:"/>
            <ComboBox fx:id="studentCombo" prefWidth="200"/>
        </VBox>
        <VBox spacing="8">
            <Label text="Select Room:"/>
            <ComboBox fx:id="roomCombo" prefWidth="200"/>
        </VBox>

        <Button fx:id="allocateBtn" text="Allocate Room"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

    <Separator prefWidth="600"/>

    <!-- Allocation Summary Section -->
    <VBox spacing="10">
        <Label text="Allocations Summary"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TableView fx:id="allocationTable" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="studentCol" text="Student" prefWidth="200"/>
                <TableColumn fx:id="roomCol" text="Room" prefWidth="200"/>
                <TableColumn fx:id="dateCol" text="Date Allocated" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
