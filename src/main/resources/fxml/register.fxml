<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.RegisterController"
            prefWidth="400" prefHeight="400">
    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="30" prefWidth="300">
            <Label text="Register Account" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TextField fx:id="nameField" promptText="Full Name"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="phoneField" promptText="Phone Number" />
            <TextField fx:id="departmentField" promptText="Department" />
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <ChoiceBox fx:id="genderChoice"/>
            <ChoiceBox fx:id="roleChoice"/>
            <Button text="Register" onAction="#handleRegister"/>
            <Hyperlink text="Already have an account? Login" onAction="#goToLogin"/>
            <Label fx:id="messageLabel" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
