<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.DashboardStudentController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #fafafa;">

    <!-- HEADER -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #00695c; -fx-padding: 15;">
            <Label text="ðŸŽ“ Student Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="headerTitle"
                   text="Overview"
                   style="-fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="Logout"
                    onAction="#logout"
                    style="-fx-background-color: #00796b; -fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER"
              style="-fx-background-color: #004d40; -fx-padding: 20; -fx-pref-width: 200;">
            <Button text="Overview" onAction="#showOverview"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button text="My Room" onAction="#showRoomDetails"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button text="Payment Status" onAction="#showPaymentStatus"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button text="Notices" onAction="#showNotices"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 30;">
            <Text text="ðŸŽ“ Welcome to your dashboard!"
                  style="-fx-font-size: 18px;" />
        </StackPane>
    </center>
</BorderPane>
