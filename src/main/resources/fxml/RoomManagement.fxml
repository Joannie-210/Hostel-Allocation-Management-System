<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="12" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.RoomController"
      style="-fx-background-color: #f8f9fa; -fx-padding: 20;">

    <!-- HEADER -->
    <Label text="Room Management" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- TABLE -->
    <TableView fx:id="roomTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colRoomNumber" text="Room Number" prefWidth="120"/>
            <TableColumn fx:id="colHostelId" text="Hostel ID" prefWidth="100"/>
            <TableColumn fx:id="colCapacity" text="Capacity" prefWidth="100"/>
            <TableColumn fx:id="colOccupants" text="Occupants" prefWidth="100"/>
            <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- INPUTS -->
    <GridPane hgap="15" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Room Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtRoomNumber" promptText="Enter room number"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Hostel ID:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="txtHostelId" promptText="Enter hostel ID"
                   GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Capacity:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCapacity" promptText="Max capacity"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Occupants:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="txtOccupants" promptText="Current occupants"
                   GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>

    <!-- BUTTONS -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Add" fx:id="btnAdd" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
        <Button text="Edit" fx:id="btnEdit" style="-fx-background-color: #ffc107; -fx-text-fill: black;"/>
        <Button text="Delete" fx:id="btnDelete" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
        <Button text="Clear" fx:id="btnClear" style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
    </HBox>
</VBox>
