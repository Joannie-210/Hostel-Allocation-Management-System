<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.OverviewController"
      spacing="25"
      style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef); -fx-padding: 30;">

    <!-- HEADER -->
    <Label text="Overview Dashboard"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #212529;" />

    <!-- SUMMARY CARDS -->
    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER" spacing="5" prefWidth="200" prefHeight="100"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3);">
            <Label text="Total Hostels" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
            <Label fx:id="lblTotalHostels" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #343a40;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5" prefWidth="200" prefHeight="100"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3);">
            <Label text="Total Rooms" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
            <Label fx:id="lblTotalRooms" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #343a40;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5" prefWidth="200" prefHeight="100"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3);">
            <Label text="Total Students" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
            <Label fx:id="lblTotalStudents" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #343a40;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5" prefWidth="200" prefHeight="100"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3);">
            <Label text="Allocated Rooms" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
            <Label fx:id="lblAllocatedRooms" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #343a40;"/>
        </VBox>
    </HBox>

    <!-- CHARTS SECTION -->
    <HBox spacing="20">
        <VBox spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Room Allocation Overview"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #212529;"/>
            <PieChart fx:id="allocationPieChart" prefHeight="250" />
        </VBox>

        <VBox spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Student Distribution"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #212529;"/>
            <PieChart fx:id="studentDistributionChart" prefHeight="250" />
        </VBox>
    </HBox>

    <!-- BAR CHART SECTION -->
    <VBox spacing="10">
        <Label text="Rooms per Hostel"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #212529;"/>
        <BarChart fx:id="roomsBarChart" prefHeight="300">
            <xAxis>
                <CategoryAxis label="Hostels"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Number of Rooms"/>
            </yAxis>
        </BarChart>
    </VBox>

</VBox>
