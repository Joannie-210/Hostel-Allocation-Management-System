<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.AdminStudentsController"
      spacing="10" alignment="CENTER">

    <!-- Padding around the VBox -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="All Students" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <!-- TableView for students -->
    <TableView fx:id="studentTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="regNoCol" text="Reg No" prefWidth="100"/>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="150"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="180"/>
            <TableColumn fx:id="genderCol" text="Gender" prefWidth="80"/>
            <TableColumn fx:id="phoneCol" text="Phone" prefWidth="120"/>
            <TableColumn fx:id="departmentCol" text="Department" prefWidth="120"/>
            <TableColumn fx:id="levelCol" text="Level" prefWidth="80"/>
            <TableColumn fx:id="roomCol" text="Room ID" prefWidth="80"/>
            <TableColumn fx:id="deleteCol" text="Action" prefWidth="80"/>
        </columns>

        <!-- Placeholder text when table is empty -->
        <placeholder>
            <Label text="No students found" style="-fx-text-fill: gray;"/>
        </placeholder>
    </TableView>

</VBox>
