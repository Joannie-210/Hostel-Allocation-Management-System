<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="rootPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.DashboardAdminController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #f8f9fa;">

    <!-- HEADER -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #1a237e; -fx-padding: 15;">
            <Label text="🏢 Hostel Admin Panel"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="headerTitle"
                   text="Overview"
                   style="-fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="Logout"
                    onAction="#logout"
                    style="-fx-background-color: #3949ab; -fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="15" alignment="TOP_LEFT"
              style="-fx-background-color: #283593; -fx-padding: 20; -fx-pref-width: 220;">
            <Button text="🏠 Overview" onAction="#showOverview"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" />
            <Button text="🎓 Manage Students" onAction="#showManageStudents"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" />
            <Button text="🏢 Manage Hostels" onAction="#showManageHostels"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" />
            <Button text="🛏️ Manage Rooms" onAction="#showManageRooms"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" />
            <Button text="🔑 Allocate Hostels" onAction="#showAllocateHostels"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" />
            <Button text="📄 Reports" onAction="#showReports"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" />
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <!-- MAIN CONTENT -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 30;">
            <VBox fx:id="overviewBox" spacing="25">

                <!-- Default dashboard content -->
                <Text text="📊 Overview of All Hostels and Users"
                      style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <!-- STAT CARDS -->
                <HBox spacing="20">
                    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 2);">
                        <Label text="🏢 Total Hostels" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                        <Label fx:id="lblTotalHostels" text="0" style="-fx-font-size: 22px; -fx-text-fill: #1a237e;" />
                    </VBox>

                    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 2);">
                        <Label text="🛏️ Total Rooms" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                        <Label fx:id="lblTotalRooms" text="0" style="-fx-font-size: 22px; -fx-text-fill: #1a237e;" />
                    </VBox>

                    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 2);">
                        <Label text="👥 Total Students" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                        <Label fx:id="lblTotalStudents" text="0" style="-fx-font-size: 22px; -fx-text-fill: #1a237e;" />
                    </VBox>

                    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 2);">
                        <Label text="✅ Allocated Rooms" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                        <Label fx:id="lblAllocatedRooms" text="0" style="-fx-font-size: 22px; -fx-text-fill: #1a237e;" />
                    </VBox>
                </HBox>

                <!-- CHARTS -->
                <HBox spacing="30" style="-fx-padding: 20;">
                    <VBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="📈 Hostel Allocation Chart" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <PieChart fx:id="allocationPieChart" prefWidth="400" prefHeight="300" />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="📊 Rooms per Hostel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <BarChart fx:id="roomsBarChart" prefWidth="400" prefHeight="300">
                            <xAxis>
                                <CategoryAxis label="Hostels" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Rooms" />
                            </yAxis>
                        </BarChart>
                    </VBox>
                </HBox>

                <!-- Optional: Student Distribution Chart -->
                <VBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="👥 Student Distribution" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <PieChart fx:id="studentDistributionChart" prefWidth="400" prefHeight="300" />
                </VBox>

            </VBox>
        </StackPane>
    </center>

</BorderPane>
