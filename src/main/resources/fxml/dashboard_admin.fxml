<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.DashboardAdminController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #f8f9fa;">

    <!-- HEADER -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #1a237e; -fx-padding: 15;">
            <Label text="🏢 Hostel Admin Panel"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="headerTitle"
                   text="Overview"
                   style="-fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="Logout"
                    onAction="#logout"
                    style="-fx-background-color: #3949ab; -fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER"
              style="-fx-background-color: #283593; -fx-padding: 20; -fx-pref-width: 200;">
            <Button text="Overview" onAction="#showOverview"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button text="Manage Students" onAction="#showManageStudents"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button text="Manage Rooms" onAction="#showManageRooms"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button text="Reports" onAction="#showReports"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 30;">
            <Text text="📊 Overview of all hostels and users"
                  style="-fx-font-size: 18px;" />
        </StackPane>
    </center>
</BorderPane>
